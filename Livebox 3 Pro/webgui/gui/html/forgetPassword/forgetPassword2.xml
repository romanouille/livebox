<div id="forgetPassword2"  xmlns="http://www.orange.com/xhtml/engine/loose">
	<h1 i18n="page.auth.common.label"/>
	<a  href="javascript:;" class="close" i18n="common.close"/>
	<div class="content">
		<span class="font_size_forPass bold_font" i18n="page.forgetPassword.title1"/>
		<div class="clear"/>
		<span class="font_size_forPass" i18n="page.forgetPassword.label2"/>
		<form action="#">
			<div  widgetType="FormInput" i18n="page.forgetPassword.user">
				<input class="w150px" type="text" id="login" value="LOGIN" readonly="readonly"/>
				<!-- <span class="bold_font"  id="login"  /> -->
			</div>
			
			<div  widgetType="FormInput" i18n="page.forgetPassword.newpassword">
				<input class="w150px"  id="newPassword" type="password" i18n="page.forgetPassword.newpassword"/>
			</div>
			<div id="failedpassLenght" i18n="page.forgetPassword.errorPassWordLength" class="hidden margin-left-217 bold red"></div>
			
			<div  widgetType="FormInput" i18n="page.forgetPassword.confirmnewpassword">
				<input class="w150px"  id="confirmNewPassword" type="password" i18n="page.forgetPassword.confirmnewpassword"/>
			</div>
			<div id="failedpassCheck" i18n="page.forgetPassword.errorPassWordCheck" class="hidden margin-left-217 bold red"></div>
			
			<div widgetType="ButtonContainer" class="right">
<!-- 				<span id="backBtn" widgetType="Button" widgetArg="{type: 'simple'}" i18n="page.forgetPassword.back"/> -->
				<span id="cancelBtn" widgetType="ButtonImage" i18n="page.forgetPassword2.cancel"/><!-- data.cancel -->
				<span id="validateBtn" widgetType="ButtonImage" i18n="page.forgetPassword2.valid"/>
			</div>
		</form>
	</div>
</div>