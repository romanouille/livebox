<div id="forgetPassword1"  xmlns="http://www.orange.com/xhtml/engine/loose">
    <h1 i18n="page.auth.common.label"/>
	<a  href="javascript:;" class="close" i18n="common.close"/>
	<div class="content">
		<span class="font_size_forPass bold_font" i18n="page.forgetPassword.title"/>
		<br/>
		<span class="font_size_forPass" i18n="page.forgetPassword.label1"/>	
		<form action="#">
		<input  type="text" id="login" style="display:none" value="admin"/>
		<div class="margin-left-30" widgetType="FormInput" i18n="page.forgetPassword.secretquery">
			<span class="bold_font" dataId="Device/UserAccounts/ManagedUsers/ManagedUser[Login='admin']/SecretQuery" />
		</div>
	
		<div class=" margin-left-30" widgetType="FormInput" i18n="page.forgetPassword.answer">
			<input class="w150px" id="SecretAnswer" type="text" i18n="page.forgetPassword.answer"/>
		</div>
		<div class="error" style="display:none" i18n="page.forgetPassword.failed"/>
		<div widgetType="ButtonContainer" class="right"> 
			<!-- <span id="backBtn" widgetType="ButtonImage" i18n="page.forgetPassword.back"/> -->
			<span id="cancelBtn" widgetType="ButtonImage"  i18n="page.forgetPassword1.cancel"/><!-- data.cancel -->
			<span id="validateBtn" widgetType="ButtonImage" widgetArg="{type: 'simple'}" i18n="page.forgetPassword1.valid"/>
		</div>
	</form>
	</div>
</div>

