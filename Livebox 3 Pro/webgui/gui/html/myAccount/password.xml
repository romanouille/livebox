<div id="password" xmlns="http://www.orange.com/xhtml/engine/loose">
  <div class="boxType3">
		<div id="helpPage">
			<a  id="help" href="javascript:;">
			<img align="middle" i18n="img.data.ico_txt_help" widgetType="Image"/>
			</a>
		</div>
		<h1 class="logo_myAccount" i18n="menuAccount.password"/>
		<div class="margin-left-40 margin-top-m8">
			<span i18n="page.myAccount.password.subtitle"/>
		</div>
	</div>
	<div class="maindiv">		
		<form action="#">
		<div class="boxType4 margin-top-10 border-bottom-1">
			<span class="h3Text" i18n="page.myAccount.password.ident"/>
			<br/>
			<div widgetType="FormInput" i18n="page.myAccount.password.user">
				<span id="username"/>
			</div>

			<div widgetType="FormInput" i18n="page.myAccount.password.password">
				<span id="currentpassword" widgetType="Password" widgetArg="{char: '•', period: 2000}" i18n="page.myAccount.password.password"/>
			</div>

			<div widgetType="FormInput" i18n="page.myAccount.password.newpassword">
				<span id="newpassword" widgetType="Password" widgetArg="{char: '•', period: 2000}" i18n="page.myAccount.password.newpassword"/>
			</div>

			<div widgetType="FormInput" i18n="page.myAccount.password.newpasswordconfirm">
				<span id="newpasswordconfirm" widgetType="Password" widgetArg="{char: '•', period: 2000}" i18n="page.myAccount.password.newpasswordconfirm"/>
			</div>

			<div id="errorMsgCurrentDiff" class="forminput error" i18n="page.myAccount.password.error.current.diff" style="display:none"/>
			<div id="errorMsgNewDiff" class="forminput error" i18n="page.myAccount.password.error.new.diff" style="display:none"/>
			<div id="errorMsgLength" class="forminput error" i18n="page.myAccount.password.error.length" style="display:none"/>
         </div>
		  <div class="boxType5 border-bottom-3">
			<span class="h3Text" i18n="page.myAccount.password.forget"/>
			<br/>
			<div widgetType="FormInput" i18n="page.myAccount.password.secretquery">
				<input id="secretquery" type="text" i18n="page.myAccount.password.secretquery"/>
			</div>

			<div widgetType="FormInput" i18n="page.myAccount.password.answer">
				<span id="secretanswer" widgetType="Password" widgetArg="{char: '•', period: 2000}" i18n="page.myAccount.password.answer"/>
			</div>

			<div id="saveOkSecure" class="forminput okStatus" i18n="page.myAccount.password.error.oksecure" style="display:none"/>
			<div id="saveOkNoSecure" class="forminput okStatus" i18n="page.myAccount.password.error.oknosecure" style="display:none"/>
          </div>

			<div widgetType="ButtonContainer" class="right">
				<span id="btnCancel" widgetType="Button" widgetArg="{type: 'reset'}" i18n="data.cancel"/>
				<span id="btnSave" widgetType="Button" widgetArg="{type: 'submit', crud: 'update'}" i18n="page.myAccount.password.save"/>
			</div>
		</form>
		<input style="display:none" type="text" id="memoryCardStatus" dataId="Device/DeviceInfo/SmartCard/Status"/>
	</div>
</div>