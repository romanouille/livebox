<div id="page0password" class="status-block" xmlns="http://www.orange.com/xhtml/engine/loose">
	<p class="blockTitle bold_font" i18n="page.page0.common.label"/>
	<form class="page0_container">
		<div class="rightBlockTitle">
			<div i18n="page.page0.common.step1" class="currentStep_1"/>
		</div>
		<h2 class="nobold">
			<span i18n="page.page0.password.subtitle"/><br/>
			<span i18n="page.page0.password.forgetpassredirect"/>&#160;
			<a id="jump2forget" class="orange underlined" i18n="page.page0.password.forgetpassredirect.link"/>
		</h2>
		<div class="passForm">
			<div widgetType="FormInput" i18n="page.auth.login">
				<input id="uLogin" type="text" i18n="page.auth.login" value="admin" readonly="readonly"/>
			</div>
			<div widgetType="FormInput" i18n="page.auth.password">
				<input id="uPassword" type="password" i18n="page.auth.password"></input>
			</div>
		</div>
		<div widgetType="ButtonContainer" class="center">
			<span id="toStep0" widgetType="Button" widgetArg="{type: 'simple'}" i18n="common.previous.step"/>
			<span class="spacer"/>
			<span id="resetPass" widgetType="Button" widgetArg="{type: 'simple'}" i18n="data.cancel"></span>
			<span class="spacer"/>
			<span id="page0passwordvalid" widgetType="Button" widgetArg="{type: 'simple'}" i18n="page.page0.password.valid"/>
		</div>
	</form>
	<div class="hidden errorStyle" id="failedAuthMsg" i18n="page.page0.password.wrongpassword"/>
	<div class="hidden errorStyle" id="failedMC" i18n="page.page0.password.mcRemoved"/>
	
	<input type="text" style="display:none" id="memoryCardStatus" dataId="Device/DeviceInfo/SmartCard/Status"/>
</div>